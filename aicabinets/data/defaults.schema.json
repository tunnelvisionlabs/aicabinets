{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Cabinets defaults (millimeters)",
  "type": "object",
  "required": [
    "width_mm",
    "depth_mm",
    "height_mm",
    "panel_thickness_mm",
    "toe_kick_height_mm",
    "toe_kick_depth_mm",
    "front",
    "shelves",
    "partitions"
  ],
  "properties": {
    "width_mm": { "type": "number", "minimum": 0 },
    "depth_mm": { "type": "number", "minimum": 0 },
    "height_mm": { "type": "number", "minimum": 0 },
    "panel_thickness_mm": { "type": "number", "minimum": 0 },
    "toe_kick_height_mm": { "type": "number", "minimum": 0 },
    "toe_kick_depth_mm": { "type": "number", "minimum": 0 },
    "front": {
      "type": "string",
      "enum": ["empty", "doors_left", "doors_right", "doors_double"]
    },
    "shelves": { "type": "integer", "minimum": 0, "maximum": 20 },
    "partitions": {
      "type": "object",
      "required": ["mode", "count", "positions_mm", "panel_thickness_mm"],
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["none", "even", "positions"]
        },
        "count": { "type": "integer", "minimum": 0, "maximum": 20 },
        "positions_mm": {
          "type": "array",
          "items": { "type": "number", "minimum": 0 }
        },
        "panel_thickness_mm": {
          "type": ["number", "null"],
          "minimum": 0
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
